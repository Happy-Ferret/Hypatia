module Tests

import Prelude((&), (==), (*), (+),
    matches, write, boolToString, arrayFoldl,
        Unit, Tuple, insert, empty)
import Geometry(Vec4, Mat4, transpose, multiply, dot)
import Array(foldl, append, inspect)


test name result = write (name & " " & inspect result)

m1 = Mat4
    (Vec4 2 3 5 7)
    (Vec4 11 13 17 19)
    (Vec4 23 29 31 37)
    (Vec4 41 43 47 53)

m2 = Mat4
    (Vec4 59 61 67 71)
    (Vec4 73 79 83 89)
    (Vec4 97 101 103 107)
    (Vec4 109 113 127 131)

testTranspose =
    let {
        m1t = Mat4
            (Vec4 2 11 23 41)
            (Vec4 3 13 29 43)
            (Vec4 5 17 31 47)
            (Vec4 7 19 37 53)
    } in test "transpose" (boolToString (transpose m1 == m1t))

testMultiply =
    let {
        m = Mat4
            (Vec4 1585 1655 1787 1861)
            (Vec4 5318 5562 5980 6246)
            (Vec4 10514 11006 11840 12378)
            (Vec4 15894 16634 17888 18710)
    } in test "multiply" (boolToString (multiply m1 m2 == m))

testPrecedence =
    let {
        v1 = 5 + 3 * 4
        v2 = 3 * 4 + 5
    } in test "precedence" (boolToString (v1 == v2))

testDot =
    let {
        v1 = Vec4 2 3 5 7
        v2 = Vec4 11 13 17 19
    } in test "dot prod" (boolToString (dot v1 v2 == 279))

testParens1 =
    let {
        v1 = (2 * 3) + (5 * 7)
        v2 =  2 * 3  +  5 * 7
    } in test "parens1" (boolToString (v1 == v2))

testParens2 =
    let {
        v1 = (2 * 3) + (5 * 7) + (11 * 13)
        v2 =  2 * 3  +  5 * 7  +  11 * 13
    } in test "parens2" (boolToString (v1 == v2))

testEq =
    let {
        m = Mat4
            (Vec4 2 3 5 7)
            (Vec4 11 13 17 19)
            (Vec4 23 29 31 37)
            (Vec4 41 43 47 53)
    } in test "eq" (boolToString (m1 == m))

testRight = test "should be true:" (matches m1 m1)
testWrong = test "should be false:" (matches m1 m2)
testInspect = test "inspect" (multiply m2 m1)
